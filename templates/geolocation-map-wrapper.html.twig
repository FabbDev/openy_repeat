{#
/**
 * @file
 * Default microdata theme implementation for a geolocation with latitude, longitude.
 *
 * Available variables:
 * - lat: The latitude value.
 * - lng: The longitude value.
 *
 * @see template_preprocess()
 *
 * @ingroup themeable
 */
#}
<div
    id="{{ uniqueid }}"
    class="geolocation-map-wrapper"

    {% if maptype is not empty %}
        data-map-type="{{ maptype }}"
    {% else %}
        data-map-type="google"
    {% endif %}

    {% if centre.lat_north_east is not empty and centre.lng_north_east is not empty and centre.lat_south_west is not empty and centre.lng_south_west is not empty %}
        data-centre-lat-north-east="{{ centre.lat_north_east }}"
        data-centre-lng-north-east="{{ centre.lng_north_east }}"
        data-centre-lat-south-west="{{ centre.lat_south_west }}"
        data-centre-lng-south-west="{{ centre.lng_south_west }}"
    {% endif %}

    {% if centre.lat is not empty and centre.lng is not empty %}
        data-centre-lat="{{ centre.lat }}"
        data-centre-lng="{{ centre.lng }}"
    {% endif %}

    {% if centre.behavior is not empty %}
        data-centre-behavior="{{ centre.behavior }}"
    {% else %}
        data-centre-behavior="fitlocations"
    {% endif %}
>
<div class="geolocation-map-container"></div>
    {% if locations is not empty %}
        <div class="geolocation-map-locations">
        {%  for location in locations %}
            {{ location }}
        {% endfor %}
        </div>
    {% endif %}
</div>
